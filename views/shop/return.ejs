

<%- include('../includes/userHead.ejs') %>
<%- include('../includes/userNavbar.ejs') %>

<style>
  
    /* Add a unique class to encapsulate styles */
    .return-form-container {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .return-form {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 300px;
    }

    .return-form h2 {
      text-align: center;
      color: #333;
    }

    .return-form label {
      display: block;
      margin-bottom: 8px;
      color: #555;
    }

    .return-form input,
    .return-form textarea,
    .return-form select {
      width: 100%;
      padding: 8px;
      margin-bottom: 16px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .return-form input[type="submit"] {
      background-color: #4caf50;
      color: #fff;
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .return-form input[type="submit"]:hover {
      background-color: #45a049;
      margin-top: 10px;
    }
  </style>
  <!-- Add a container with a unique class for the return form -->
  <div class="return-form-container">
    <form class="return-form" action="/user/return-order?orderId=<%= orderId %>" method="POST">
      <h2>Return</h2>

      <!-- Message Text Box -->
      <label for="message">Message:</label>
      <textarea id="message" name="message" rows="4" required></textarea>

      <!-- Reason for Return Option Button (Defect) -->
      <label for="returnReason">Reason for Return:</label>
      <select id="returnReason" name="returnReason" required>
        <option value="Defect">Defect Piece</option>
        <option value="Other">Other</option>
      </select>

      <!-- Submit Button -->
      <br>
      <input type="submit" value="Submit">
    </form>
  </div>





